<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jonatasleon.atividadeiii.RelativeActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_lembrete"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_data"
        android:layout_below="@+id/edt_lembrete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/edt_hora"
        android:layout_toStartOf="@+id/edt_hora" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/edt_hora"
        android:layout_below="@+id/edt_lembrete"
        android:layout_alignRight="@+id/edt_lembrete"
        android:layout_alignEnd="@+id/edt_lembrete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_salvar"
        android:layout_below="@+id/edt_data"
        android:layout_alignRight="@+id/edt_lembrete"
        android:layout_alignEnd="@+id/edt_lembrete"
        android:layout_alignLeft="@+id/edt_hora"
        android:layout_alignStart="@+id/edt_hora" />
</RelativeLayout>
